<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title%></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

</head>
<body>
    <div class="container">
        <h1><%= title%></h1>
        <form action="/add" method="post">
            <legend>Agrege un producto</legend>
            <div class="form-group">
                Codigo
                <input type="text" id="Codigo" class="form-control" name="Codigo">
            </div>
            <div class="form-group">
                <input type="text" id="Nombre" class="form-control" name="Nombre">
            </div>
            <div class="form-group">
                <input type="number" id="Cantidad" class="form-control" name="Cantidad">
            </div>
            <div class="form-group">
                <input type="text" id="Tipo" class="form-control" name="Tipo">
            </div>
            <div class="form-group">
                <input type="date" id="FechaVencimiento" class="form-control" name="FechaVencimiento">
            </div>
            <div class="form-group">
                <input type="date" id="FechaCompra" class="form-control" name="FechaCompra">
            </div>
            <div class="form-group">
                <input type="number" id="Precio" class="form-control" name="Precio">
            </div>
            <div class="form-group">
                <input type="number" id="Lote" class="form-control" name="Lote">
            </div>
            <div class="form-group">
                <input type="date" id="FechaCreacion" class="form-control" name="FechaCreacion">
            </div>
            <button class="btn btn-primary">
                Agregar
            </button>
        </form>
        <hr>
        <table class="table table-bordered table-hover data-editable">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Cantidad</th>
                    <th>Tipo</th>
                    <th>Fecha Vencimiento</th>
                    <th>Fecha Compra</th>
                    <th>Precio</th>
                    <th>Estado</th>
                    <th>Lote</th>
                    <th>Fecha Creacion</th>
                    <th>Opciones</th>
                </tr>
            </thead>            
            <tbody>
                <% for (var i=0; i < product.length; i++) {%>
               <tr>
                <td><%= i + 1%></td>
                <td><%= product[i].Nombre%></td>
                <td><%= product[i].Cantidad%></td>
                <td><%= product[i].Tipo%></td>
                <td><%= product[i].FechaVencimiento%></td>
                <td><%= product[i].FechaCompra%></td>
                <td><%= product[i].Precio%></td>
                <td><%= product[i].Estado%></td>
                <td><%= product[i].Lote%></td>
                <td><%= product[i].FechaCreacion%></td>
                <td>
                    <a href="">Editar</a>
                    <a class="btn btn-danger" href="/delete/<%= product[i]._id%>">Eliminar</a>
                </td>
               </tr>
                <% }%>
            </tbody>
        </table>
    </div>
    <script>
        document.getElementById('Codigo').focus();
    </script>

</body>
</html>